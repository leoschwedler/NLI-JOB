<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:id="@+id/tipologiaPrincipale_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/iseo_gray"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <it.divitech.nliticketapp.ui.controls.QuantitativoTitoloViaggioView
            android:id="@+id/tipologiaPrincipale_Control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="PRINCIPALE" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tipologieAccessorie_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tipologiaPrincipale_LinearLayout">

        <it.divitech.nliticketapp.ui.controls.QuantitativoTitoloViaggioView
            android:id="@+id/tipologiaAccessoria1_Control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="ACCESSORIA 1" />

        <it.divitech.nliticketapp.ui.controls.QuantitativoTitoloViaggioView
            android:id="@+id/tipologiaAccessoria2_Control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="ACCESSORIA 2" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>